{
  "name": "zaimfast",
  "repository": "git@github.com:loysger/zaimfast.git",
  "private": true,
  "dependencies": {
    "lodash-es": "^4.17.15"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/preset-env": "^7.5.5",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.5",
    "colors": "^1.3.3",
    "css-declaration-sorter": "^4.0.1",
    "del": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-csso": "^3.0.1",
    "gulp-hb": "^8.0.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "handlebars-layouts": "^3.1.4",
    "htmlhint": "^0.11.0",
    "husky": "^3.0.4",
    "js-beautify": "1.10.2",
    "lint-staged": "^9.2.5",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "postcss-scss": "^2.0.0",
    "prettier": "1.18.2",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.6.1",
    "webpack": "^4.39.2",
    "webpack-stream": "^5.2.1"
  },
  "browserslist": [
    "defaults"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test && git pull"
    }
  },
  "lint-staged": {
    "*.hbs": [
      "js-beautify --type html --replace --file",
      "git add"
    ],
    "*.{js,scss,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "gulp serve",
    "build": "gulp build",
    "prod": "gulp prod",
    "test": "stylelint ./src/scss/components/*.scss && htmlhint ./src/html/**/*.hbs && eslint ./src/js/**/*.js",
    "format-all": "yarn prettier --write src/**/*.{js,scss,json} && yarn format:hbs",
    "format:hbs": "yarn js-beautify src/**/*.hbs --type html",
    "clean-all": "rm -rf node_modules && rm -rf build && rm -rf production",
    "clean": "rm -rf build && rm -rf production"
  }
}
