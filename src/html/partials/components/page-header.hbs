<header class="page__header header">
  <div class="header__container">
    <h1 class="heading-1 hidden">Zaimfast</h1>
    <div class="header__top">
      <a class="header__logo logo" href="/">
        <img src="https://via.placeholder.com/167x30" alt="Логотип сайта" />
      </a>
      <button class="header__burger">
        <span class="hidden">Показать меню</span>
      </button>
    </div>
    <div class="main-navigation-container">
      <nav class="header__navigation main-navigation">
        <div class="main-navigation__top">
          <h2 class="heading-2 main-navigation__heading hidden">Меню</h2>
        </div>
        <ul class="main-navigation__list">
          {{#each mainNavigation.links}}
          <li class="main-navigation__item">
            <a href="{{href}}" class="heading-3">{{text}}</a>
          </li>
          {{/each}}
        </ul>
      </nav>
    </div>
  </div>
</header>
