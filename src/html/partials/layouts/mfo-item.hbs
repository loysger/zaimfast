{{#extend "common-page"}}

{{#content "header"}}
{{> head title=name}}
{{/content}}

{{#content "content"}}
{{> page-header}}
<main class="page-content page-content_mfo-page page-content_aside page-content_{{title}}">
  <div class="page-content__wrap">
    <div class="page-wrap">
      <section class="zaem">
        <h2 class="hidden">{{name}}</h2>
        <div class="zaem-card {{#if this.tarify}}zaem-card_tariffs_closed{{/if}}">
          <div class="zaem-card__top">
            <div class="zaem-card__img">
              <a class="zaem-card__img-link" href="{{link}}" title="{{name}}">
                <img class="zaem-card__img-tag" src="{{img}}" alt="{{name}}" />
              </a>
            </div>
          </div>
          <div class="zaem-card__contain calc-item" data-rate="{{ratePerDay}}">
            {{#if this.tarify}}
            <button class="button zaem-card__tariffs-more">Еще тарифы</button>
            {{/if}}
            <p class="zaem-card__prop">
              <span class="zaem-card__prop-text">{{ratePerDay}} %</span>
              <span class="zaem-card__prop-name">Ставка в день</span>
            </p>
            {{!-- <p class="zaem-card__prop">
              <span class="zaem-card__prop-text"><span class="calc-amount-value">3 000</span> ₽</span>
              <span class="zaem-card__prop-name">Сумма</span>
            </p>
            <p class="zaem-card__prop">
              <span class="zaem-card__prop-text"><span class="calc-days-value">10</span> дней</span>
              <span class="zaem-card__prop-name">Срок</span>
            </p> --}}
            <p class="zaem-card__prop">
              <span class="zaem-card__prop-text"><span class="calc-overcharge-value">10</span> ₽</span>
              <span class="zaem-card__prop-name">Переплата</span>
            </p>
          </div>
          {{#if this.tarify}}
          <div class="zaem-card__tariffs">
            <ul>
              {{#each this.tarify}}
              <li class="zaem-card__tariffs-item calc-item" data-rate="{{rate}}">
                <p class="zaem-card__prop zaem-card__prop_tariffs zaem-card__tariffs-name">
                  <span class="zaem-card__prop-text">{{name}}</span>
                </p>
                <p class="zaem-card__prop zaem-card__prop_tariffs">
                  <span class="zaem-card__prop-text">{{rate}} %</span>
                  {{!-- <span class="zaem-card__prop-name">Ставка в день</span> --}}
                </p>
                {{!-- <p class="zaem-card__prop">
                  <span class="zaem-card__prop-text"><span class="calc-amount-value">3 000</span> ₽</span>
                  <span class="zaem-card__prop-name">Сумма</span>
                </p>
                <p class="zaem-card__prop">
                  <span class="zaem-card__prop-text"><span class="calc-days-value">10</span> дней</span>
                  <span class="zaem-card__prop-name">Срок</span>
                </p> --}}
                <p class="zaem-card__prop zaem-card__prop_tariffs">
                  <span class="zaem-card__prop-text"><span class="calc-overcharge-value">10</span> ₽</span>
                  {{!-- <span class="zaem-card__prop-name">Переплата</span> --}}
                </p>
              </li>
              {{/each}}
            </ul>
          </div>
          {{/if}}
          <div class="zaem__calc calc">
            <h3 class="calc__heading heading-4">Рассчитать заем</h3>
            <div class="calc__amount">
              <label class="calc__label" for="calc-amount">Введите сумму займа, руб.</label>
              <input class="calc__input" id="calc-amount" name="amount" type="number" value="{{toNumber summFrom}}"
                maxlength="10" minlength="4" min="{{toNumber summFrom}}" max="{{toNumber summTo}}"
                data-step-size="500" />
              <div class="calc__slider slider">
                <div class="slider__conteiner">
                  <div class="slider__lenght">
                    <div class="slider__depth">
                      <div class="slider__pin">
                        <div class="slider__hint">
                          <div class="slider__hint-triangle"></div>
                          <div class="slider__hint-content">15000</div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="calc__days">
              <label class="calc__label" for="calc-days">Введите кол-во дней</label>
              <input class="calc__input" id="calc-days" name="days" type="number" value="{{limitFrom}}" maxlength="3"
                minlength="1" min="{{limitFrom}}" max="{{limitTo}}" data-step-size="1" />
              <div class="calc__slider slider">
                <div class="slider__conteiner">
                  <div class="slider__lenght">
                    <div class="slider__depth">
                      <div class="slider__pin">
                        <div class="slider__hint">
                          <div class="slider__hint-triangle"></div>
                          <div class="slider__hint-content">15000</div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <a class="zaem-card__go button" href="{{link}}">Оформить</a>
        </div>
        <table class="zaem__table">
          <tr>
            <td>Веб-сайт</td>
            <td><a href="{{link}}">{{linkName}}</a></td>
          </tr>
          <tr>
            <td>Адрес компании</td>
            <td><a href="{{mapLink}}">{{adress}}</a></td>
          </tr>
          <tr>
            <td>Номер телефонов горячей линии</td>
            <td>{{tel}}</td>
          </tr>
          <tr>
            <td>Электронная почта</td>
            <td>{{email}}</td>
          </tr>
          <tr>
            <td>Часы работы</td>
            <td>{{workingTime}}</td>
          </tr>
          <tr>
            <td>Номер свидетельства регистрации
            </td>
            <td>{{registrationNumber}}</td>
          </tr>
          <tr>
            <td>ОГРН</td>
            <td>{{OGRN}}</td>
          </tr>
          <tr>
            <td>ИНН</td>
            <td>{{INN}}</td>
          </tr>
          <tr>
            <td>Дата внесения в реестр</td>
            <td>{{registartionDate}}</td>
          </tr>
        </table>
      </section>
      <section class="zaem-about">
        <h2 class="zaem-about__heading heading-3">О предложении</h2>
        <div class="zaem-about__content">
          {{#each about}}
          <p class="zaem-about__text">{{this}}</p>
          {{/each}}
          <div>
            <h2 class="zaem-about__heading heading-3">
              Плюсы {{name}}
            </h2>
            <ul class="list">
              {{#each advantages}}
              <li class="list__item">{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
        {{!-- <button class="zaem-about__more">Показать больше</button> --}}
      </section>
      <section class="zaem-condition">
        <h2 class="zaem-condition__heading heading-3">Условия</h2>
        <table class="zaem-condition__table">
          <tbody>
            <tr class="zaem-condition__item">
              <td>
                Выдача денег
              </td>
              <td>
                <ul class="list">
                  {{#each conditions.paymentTime}}
                  <li class="list__item">{{this}}</li>
                  {{/each}}
                </ul>
              </td>
            </tr>
            <tr class="zaem-condition__item">
              <td>Варианты погашения</td>
              <td>
                <ul class="list">
                  {{#each conditions.repayment}}
                  <li class="list__item">{{this}}</li>
                  {{/each}}
                </ul>
              </td>
            </tr>
            <tr class="zaem-condition__item">
              <td>Оплата</td>
              <td>{{conditions.payment}}</td>
            </tr>
            <tr class="zaem-condition__item">
              <td>Время рассмотрения</td>
              <td>{{conditions.reviewTime}}</td>
            </tr>
            <tr class="zaem-condition__item">
              <td>Продление</td>
              <td>{{conditions.prolongation}}</td>
            </tr>
          </tbody>
        </table>
      </section>
      <section class="zaem-borrower">
        <h2 class="zaem-borrower__heading heading-3">Требования к заемщику</h2>
        <ul class="list">
          {{#each borrower}}
          <li class="list__item">{{this}}</li>
          {{/each}}
        </ul>
      </section>
    </div>
    {{> aside}}
  </div>
</main>
{{/content}}

{{#content "footer"}}
{{> footer}}
{{/content}}

{{/extend}}
